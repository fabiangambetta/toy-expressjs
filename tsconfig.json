{
    "compilerOptions": {
      "target": "ES2018",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "outDir": "./dist",
      "sourceMap": true,
      "noImplicitAny": true
    },
    "include": ["src/**/*.ts", "src/**/*d.ts", "examples"],
    "exclude": ["node_modules"]
  }